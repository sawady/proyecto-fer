<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Formacion" table="Formacion">
		<id name="id">
            <generator class="native"/>
        </id>
                
        <property name="nombre"/>
        <many-to-one name="equipo" class="Equipo"/>
        
		<set name="titulares">
            <key column="formacion"/>
            <one-to-many class="Titular"/>
        </set>
     
        <set name="suplentes" table="SuplenteEnFormacion" inverse="true">
            <key column="id_formacion"/>
            <many-to-many column="id_jugador" class="Jugador"/>
        </set>
            
	</class>
</hibernate-mapping>